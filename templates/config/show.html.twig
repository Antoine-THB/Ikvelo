{% extends 'base.html.twig' %}

{% block body %}
    <h1>Config</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ config.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ config.libelle }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ config.value }}</td>
            </tr>
            <tr>
                <th>Value Numérique</th>
                <td>{{ config.valueNum }}</td>
            </tr>
            <tr>
                <th>Type de paramètre</th>
                <td>{{ config.idTypeConfig }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ config.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('config_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('config_edit', { 'id': config.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
