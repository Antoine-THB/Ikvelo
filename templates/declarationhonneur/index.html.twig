{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <h1>Liste des paramètres</h1>

    <table class="table">
        <thead>
            <tr>
                <th  scope="col">Id</th>
                <th>Libelle</th>
                <th>Type</th>
                <th>Value</th>
                <th>Value Num</th>
                <th>Description</th>
                <th>Actif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for config in declarations %}
            <tr>
                <td><a href="{{ path('config_show', { 'id': config.id }) }}">{{ config.id }}</a></td>
                <td>{{ config.libelle }}</td>
                <td>{{ config.idTypeConfig }}</td>
                
                <td>{{ config.value }}</td>
                <td>{{ config.valueNum }}</td>
                <td>{{ config.description }}</td>
                <td>{% if config.actif %}Oui{% else %}Non{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('config_show', { 'id': config.id }) }}">Détails</a>
                        </li>
                        <li>
                            <a href="{{ path('config_edit', { 'id': config.id }) }}">Edition</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('config_new') }}">Nouveau paramètre</a>
        </li>
    </ul>
{% endblock %}
