{% extends 'baseGestion.html.twig' %}

{% block title %}Gestion Bilan{% endblock %}

{% block body %}

    <h1>Bienvenue sur la page Bilan</h1>

    {{ form_start(form) }}
    <section class="grid-2 .has-gutter recherche">
        {{ form_widget(form) }}
        <div>
        <input type="submit" value="Rechercher" />
        </div>
    </section>
    {{ form_end(form) }}
        <br>
    <div>
        <span> <b>A modifier</b> Téléchargez le bilan au format CSV.</span>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Année</th>
                <th>Mois</th>
                <th>Salarié</th>
                <th>Nb km</th>
                <th>Indemnisation</th>
                
            </tr>
        </thead>
        <tbody>
        {% for parcour in parcours %}
            <tr class="{% if loop.index is divisible by(2) %}even{% else %}odd{% endif %}">

                <td>{{ parcour.annee }}</td>
                <td>{{ parcour.idMois }}</td>
                <td>{{ parcour.idSalarie }}</td>
                <td>{{ parcour.nbKmEffectue }}&nbsp;km</td>
                <td>{{ parcour.indemnisation }}&nbsp;€</td>

                
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
