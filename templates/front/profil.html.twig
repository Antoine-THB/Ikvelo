{% extends 'base.html.twig' %}

{% block body %}
    <div id="body">
        <h1>Profil de {{ salarie.prenom }}&nbsp;{{ salarie.nom }}</h1>
    </div>
   <div class="grid-2 .has-gutter">
    <div id="profil" class="format-grid-1" >
        <div class="item">
           <span class="label">Nom</span>
           <span class="value">{{ salarie.nom }}</span>
        </div>   
        <div class="item">
           <span class="label">Prénom</span>
           <span class="value">{{ salarie.prenom }}</span>
        </div> 
        <div class="item">
           <span class="label">Adresse</span>
           <span class="value">{{ salarie.adresse }}</span>
        </div>   
        <div class="item">
           <span class="label">Ville</span>
           <span class="value">{{ salarie.idVille }}</span>
           
        </div>
        <div class="item">
           <span class="label">Distance</span>
           <span class="value">{{ salarie.distance }} km</span>
        </div>
        <div class="item">
           <span class="label">URL de validation</span>
           <span class="value">{{ salarie.urlGeovelo }}</span>
        </div>
        <div class="item">
           <span class="label">Ecole</span>
           <span class="value">{{ salarie.idEntreprise }}</span>
        </div>
        <div class="item">
           <span class="label">Service</span>
           <span class="value">{{ salarie.idService }}</span>
        </div>
        <div >
        <a href="{{ path('front_profil_edit') }}">Modification du profil</a>
        <br>
        {% if declaration %}
        <a href="javascript:ouvre_popup('{{ path('front_declaration_print', { 'id': declaration.id }) }}')" >Impression de la déclaration d'honneur</a>
        {% else %}
            <div class="alert--info message-stat">
                Avant toute action, vous devez modifier votre profil et imprimer 
                la déclaration sur   l'honneur qui sera générée automatiquement
            </div>
        {% endif %}
        </div>        
    </div>
    {% if declaration %}
        <div class="format-grid-1" >
            {{ include('front/declarationshow.html.twig', {declaration: declaration}) }}
        </div>
    {% endif %}
    </div>
<script type="text/javascript">
function ouvre_popup(page) {
 window.open(page,"nom_popup","menubar=no, status=no, scrollbars=no, menubar=no, width=800, height=1000");
}
</script> 
{% endblock %}


