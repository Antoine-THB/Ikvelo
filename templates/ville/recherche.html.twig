{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <h1>Recherche de villes </h1>
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Rechercher" />
    {{ form_end(form) }}
    <br>

    <table>
        <thead>
            <tr>
                <th>DÃ©partement</th>
                <th>Ville</th>
                <th>Code postal</th>
                <th>Actif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ville in villes %}
            <tr class="{% if loop.index is divisible by(2) %}even{% else %}odd{% endif %}">

                <td>{{ ville.numDepartement }}</td>
                <td>{{ ville.ville }}</td>
                <td>{{ ville.codePostal }}</td>
                <td>{% if ville.actif %}Oui{% else %}Non{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('ville_show', { 'id': ville.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('ville_edit', { 'id': ville.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ville_new') }}">Create a new ville</a>
        </li>
    </ul>
{% endblock %}
